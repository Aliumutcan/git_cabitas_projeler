<div class="container">

    <div class="row" id="pwd-container">
        <div class="col-md-4"></div>

        @{
            if (ViewData["session"] == null)
            {
                <div class="col-md-4">
                    <section class="login-form">
                        <form method="post" action="login" role="login">
                            <img src="http://i.imgur.com/RcmcLv4.png" class="img-responsive" alt="" />
                            <input type="text" name="name_and_surname" placeholder="text" required class="form-control input-lg" value="joestudent@gmail.com" />
                            <div class="pwstrength_viewport_progress">PİN: @ViewBag.pin_kod</div>


                            <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Sign in</button>
                            <div>
                                <a href="create">Create account</a> or <a href="#">reset password</a>
                            </div>

                        </form>


                    </section>
                </div>
            }
            else
            {
                <div class="col-md-4">
                    <section class="login-form">
                        <form method="get" action="exist" role="exist">
                            <img src="http://i.imgur.com/RcmcLv4.png" class="img-responsive" alt="" />
                            <label class="form-control input-lg">Hoşgeldiniz: @ViewData["session"]</label>
                            <div class="pwstrength_viewport_progress"></div>


                            <button type="submit" name="go" class="btn btn-lg btn-danger btn-block">Sign out</button>


                        </form>


                    </section>
                </div>
            }
        }

        <div class="col-md-4"></div>

    </div>

   

</div>
<style>

.progress-bar {
    color: #333;
}

